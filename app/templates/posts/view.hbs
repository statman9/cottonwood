<h2>Posts</h2>

<a href="/posts/add" class="btn btn-success">Add Post</a>

<table class="table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |post|}}
        <tr>
            <td>{{post.id}}</td>
            <td>{{post.title}}</td>
            <td>{{post.content}}</td>
            <td>
                <!-- Single button -->
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Options <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li>{{#link-to "details" (query-params id=post.id)}}Details{{/link-to}}</li>
                        <li>{{#link-to "edit" (query-params id=post.id)}}Edit{{/link-to}}</li>
                        <li><a href="#" onclick={{action "deletePost" post.id}}>Delete</a></li>
                    </ul>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>